@model Data.Entitys.User
@{
    ViewData["Title"] = "Kullanıcı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Admin panelinde özel bir layout kullanıyorsan onu yaz
}

<div class="container mt-5">
    <h2>Kullanıcı Ekle</h2>
    <form asp-action="AddUser" method="post">
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Ad</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Soyad</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PasswordHash" class="form-label">Şifre</label>
            <input asp-for="PasswordHash" type="password" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label">Rol</label>
            <select asp-for="Role" class="form-select">
                <option value="User">Kullanıcı</option>
                <option value="Admin">Admin</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
