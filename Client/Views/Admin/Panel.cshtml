@model List<Data.Entitys.User>
@{
	ViewData["Title"] = "Kullanıcılar";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mx-1">

	<h2 class="mt-4 ">Kullanıcı Listesi</h2>
	<div class="row ">
		@if (Model != null && Model.Any())
		{
            @foreach (var user in Model)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card shadow border-start-primary h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                @user.FirstName @user.LastName
                            </div>
                            <div class="small text-gray-800">
                                <strong>Email:</strong> @user.Email <br />
                                <strong>Rol:</strong> @user.Role
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/Admin/Edit/@user.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>

                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Bu kullanıcıyı silmek istediğine emin misin?')">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }

		}
		else
		{
			<div class="col-12">
				<div class="alert alert-info">Henüz kullanıcı eklenmemiş.</div>
			</div>
		}
	</div>
</div>

