@model Data.Entitys.Appointment

<h2>Yeni Randevu</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="PatientName" class="form-label"></label>
        <input asp-for="PatientName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="AppointmentDate" class="form-label"></label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
